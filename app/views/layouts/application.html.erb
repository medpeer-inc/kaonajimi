<!DOCTYPE html>
<html class="has-navbar-fixed-top">
  <head>
    <title>Kaonajimi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>

  <body>
    <nav class="navbar is-white is-fixed-top" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <%= image_tag '/logo.png' %>
        </a>
      </div>
      <% if current_user %>
        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-end">
            <div class="navbar-item">
              <%= form_with(url: users_path, method: :get) do |form| %>
                <%= form.text_field :word, placeholder: "名前/最寄駅/部署/職種で検索できます", class: 'is-medium' %>
                <%= form.submit 'Search', class: 'button is-success' %>
              <% end %>

              <div class="buttons">
                <%= link_to user_path(current_user), class: 'button is-primary' do %>
                  <span class="icon"><i class="fas fa-user"></i></span> <span>マイページ</span>
                <% end %>
                <%= link_to :logout, method: :post, class: 'button is-light' do %>
                  <span class="icon"><i class="fas fa-sign-out-alt"></i></span> <span>ログアウト</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </nav>
    <% if flash[:notice].present? %>
      <div class="notification is-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert].present? %>
      <div class="notification is-warning">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <%= yield %>
    <footer class="footer">
      <div class="content has-text-centered">
        <p>
          Copyright © 2019 MedPeer, Inc. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
