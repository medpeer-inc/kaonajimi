<section class="section" id="user">
  <div class="container">
    <div class="columns is-multiline is-centered">
      <div class="column is-three-fifths">
        <h1 class="title is-3">プロフィール編集</h1>
        <hr>
        <% image_attr = { name: @user.main_image.name, url: rails_blob_path(@user.main_image, only_path: true) } %>
        <image-upload-form :init_image="<%= image_attr.to_json %>" user_id="<%= @user.id %>">
        </image-upload-form>
        <%= render 'form', user: @user %>
      </div>
    </div>
  </div>
</section>
<%= javascript_pack_tag 'users/edit' %>
