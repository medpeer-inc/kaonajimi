<section class="section has-background-light">
  <div class="container">
    <div class="columns">
      <div class="column is-half">
        <h2 class="title is-5"><i class="fas fa-search"></i> ユーザー検索</h2>
        <%= form_with(url: users_path, method: :get) do |form| %>
          <div class="field is-grouped">
            <p class="control is-expanded">
              <%= form.text_field :word, class: 'input' %>
            </p>
            <p class="control">
              <%= form.submit '検索', class: 'button is-info' %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="box">
      <h2 class="title is-5">
        <i class="fas fa-user"></i> User一覧
      </h2>
      <div class="columns is-multiline">
        <% @users.each do |user| %>
          <div class="column is-2">
            <%= render 'user_card', user: user %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
