  <div class="hero-body">
    <div class="container">
      <h1 class="title"><%= @user_tag.title %></h1>
      <h2 class="subtitle"><%= @user_tag.description %></h2>
      <p><small><%= link_to '編集する', edit_user_tag_path(@user_tag) %></small></p>
