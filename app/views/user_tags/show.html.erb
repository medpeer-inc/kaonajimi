<section class="hero is-light is-medium">
  <div class="hero-body">
    <div class="container">
      <h1 class="title"><%= @user_tag.title %></h1>
      <h2 class="subtitle"><%= @user_tag.description %></h2>
      <p><small><%= link_to '編集する', edit_user_tag_path(@user_tag) %></small></p>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="box">
      <h2 class="title is-5">このタグが付いているユーザー</h2>
      <div class="columns is-multiline">
        <% @user_tag.users.each do |user| %>
          <div class="column is-2">
            <%= render 'top/user_card', user: user %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
